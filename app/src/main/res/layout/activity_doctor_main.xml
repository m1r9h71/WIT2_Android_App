<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.wit.medRecord.activities.DoctorMain">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="123dp"
        android:layout_height="160dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/addDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Doctor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        android:layout_below="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_marginTop="23dp"/>

    <Button
        android:id="@+id/deleteDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Doctor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDoctor"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/listDoctor"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/listDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Doctor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/addDoctor"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_below="@+id/addDoctor"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/editDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Doctor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listDoctor"
        android:layout_marginBottom="21dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/deleteDoctor"/>
</RelativeLayout>
