<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.wit.medRecord.activities.editDoctor">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="180dp"
        android:layout_height="137dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_above="@+id/oldDocName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"/>

    <EditText
        android:id="@+id/oldDocName"
        android:layout_width="388dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="Doctor Name (old)"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="199dp"
        android:layout_above="@+id/newName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"/>

    <EditText
        android:id="@+id/newName"
        android:layout_width="386dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="157dp"
        android:ems="10"
        android:hint="New Doctor Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="277dp"/>

    <Button
        android:id="@+id/editDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Doctor"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="404dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"/>
</RelativeLayout>
